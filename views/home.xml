<odoo>
	<data>

		<template id="home">
			<html lang="en">
				<head>
					<meta charset="UTF-8"/>
					<meta charset="UTF-8" />
					<meta content="IE=edge" http-equiv="X-UA-Compatible" />
					<meta content="width=device-width,initial-scale=1" name="viewport" />
					<meta name="google" content="notranslate" />
					<meta name="keywords" content="portofolio vitraining" />
					<meta name="description" content="portofolio vitraining" />
					<meta name="author" content="Arman Nur Hidayat" />
					<meta name="msapplication-tap-highlight" content="no" />
					<title>Portofolio Bootcamp</title>
					
					<link rel="apple-touch-icon" sizes="180x180" href="/vit_portofolio/static/energy/assets/apple-icon-180x180.png" />

					<!-- CSS -->
					<link href="/vit_portofolio/static/hover-effect/css/set1.css" rel="stylesheet" />
					<link href="/vit_portofolio/static/hover-effect/css/demo.css" rel="stylesheet" />
					<link href="/vit_portofolio/static/hover-effect/css/normalize.css" rel="stylesheet" />

				</head>

				<body>
					<div class="grid">

						<figure class="effect-roxy" t-foreach="employees" t-as="employee">
							<img style="opacity: 0.2;" t-attf-src="data:image/*;base64,{{employee.image}}"/>
							<figcaption>
								<h2><span t-field="employee.name"/></h2>
								<p>Lily likes to play with crayons and pencils</p>
								<a t-attf-href="/portofolio/{{employee.id}}">View more</a>
							</figcaption>
						</figure>
						
					</div>
				</body>
			</html>
		</template>

	</data>
</odoo>