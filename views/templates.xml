<odoo>
    <data>

        <template id="portofolio">
            <html>
                <head>
                    <title t-field="employee_id.name"/>

                    <!-- Meta -->
                    <meta charset="UTF-8"/>
                    <meta content="IE=edge" http-equiv="X-UA-Compatible"/>
                    <meta content="width=device-width,initial-scale=1" name="viewport"/>
                    <meta content="description" name="description"/>
                    <meta name="google" content="notranslate"/>
                    <meta content="Arman Nur Hidayat" name="author"/>
                    <meta name="msapplication-tap-highlight" content="no"/>

                    <!-- Google Font -->
                    <link href="/vit_portofolio/static/pillar/css/font.css" rel="stylesheet"/>

                    <!-- FontAwesome JS-->
                    <script src="/vit_portofolio/static/pillar/js/fontawesome.js"/>

                    <!-- Theme CSS -->
                    <link id="theme-style" rel="stylesheet" href="/vit_portofolio/static/pillar/css/pillar-3.css"/>
                </head>

                <body>
                    <article class="resume-wrapper text-center position-relative">
                        <div class="resume-wrapper-inner mx-auto text-left bg-white shadow-lg">
                            <header class="resume-header pt-4 pt-md-0">
                                <div class="media flex-column flex-md-row">
                                    <img class="mr-3 img-fluid picture mx-auto"
                                         t-attf-src="data:image/*;base64,{{employee_id.image}}"/>
                                    <div class="media-body p-4 d-flex flex-column flex-md-row mx-auto mx-lg-0">
                                        <div class="primary-info">
                                            <h1 class="name mt-0 mb-1 text-white text-uppercase text-uppercase">
                                                <span t-field="employee_id.name"/>
                                            </h1>
                                            <div class="title mb-3">
                                                <span t-field="employee_id.job_id"/>
                                            </div>
                                            <ul class="list-unstyled">
                                                <li class="mb-2">
                                                    <a href="javascript:void(0)">
                                                        <i class="far fa-envelope fa-fw mr-2"
                                                           data-fa-transform="grow-3"/>
                                                        <span t-field="employee_id.work_email"/>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="javascript:void(0)">
                                                        <i class="fas fa-mobile-alt fa-fw mr-2"
                                                           data-fa-transform="grow-6"/>
                                                        <span t-field="employee_id.mobile_phone"/>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="secondary-info ml-md-auto mt-2">
                                            <ul class="resume-social list-unstyled" t-foreach="employee_id.social_ids"
                                                t-as="social">
                                                <li class="mb-3">
                                                    <a target="_blank" t-attf-href="{{social.link}}">
                                                        <span class="fa-container text-center mr-2">
                                                            <i t-attf-class="mt-1 fab fa-{{social.name}} fa-fw"/>
                                                        </span>
                                                        <span t-field="social.link"/>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>

                                    </div>
                                </div>
                            </header>
                            <div class="resume-body p-5">
                                <section class="resume-section summary-section mb-5">
                                    <h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">About
                                        Me
                                    </h2>
                                    <div class="resume-section-content">
                                        <p class="mb-0">
                                            <span t-raw="employee_id.profile"/>
                                        </p>
                                    </div>
                                </section>
                                <div class="row">
                                    <div class="col-lg-9">
                                        <section class="resume-section experience-section mb-5">
                                            <h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">
                                                Portfolio
                                            </h2>
                                            <div class="resume-section-content">
                                                <div class="resume-timeline position-relative">

                                                    <article class="resume-timeline-item position-relative pb-5"
                                                             t-foreach="employee_id.works_ids" t-as="work">
                                                        <div class="resume-timeline-item-header mb-2">
                                                            <div class="d-flex flex-column flex-md-row">
                                                                <h3 class="resume-position-title font-weight-bold mb-1">
                                                                    <span t-field="work.name"/>
                                                                </h3>
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <a target="_blank" t-attf-href="{{work.link}}">
                                                                <img style="width: 50%;"
                                                                     t-attf-src="data:image/*;base64,{{work.image}}"
                                                                     class="img-thumbnail"/>
                                                            </a>
                                                        </div>
                                                        <br/>
                                                        <div class="resume-timeline-item-desc">
                                                            <p>
                                                                <span t-field="work.description"/>
                                                            </p>
                                                            <h4 t-if="work.technology_ids"
                                                                class="resume-timeline-item-desc-heading font-weight-bold">
                                                                Technologies used:
                                                            </h4>

                                                            <ul class="list-inline">
                                                                <li class="list-inline-item">
                                                                    <span class="badge badge-primary badge-pill"
                                                                          t-foreach="work.technology_ids" t-as="tec">
                                                                        <span t-field="tec.name"/>
                                                                    </span>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </article>

                                                </div>
                                            </div>
                                        </section>
                                    </div>

                                    <div class="col-lg-3">
                                        <section class="resume-section skills-section mb-5">
                                            <h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">
                                                Skills
                                            </h2>
                                            <div class="resume-section-content">
                                                <div class="resume-skill-item">
                                                    <ul class="list-unstyled mb-4" t-foreach="employee_id.skills_ids"
                                                        t-as="skill">
                                                        <li class="mb-2">
                                                            <div class="resume-skill-name">
                                                                <span t-field="skill.name"/>
                                                            </div>
                                                            <div class="progress resume-progress">
                                                                <div class="progress-bar theme-progress-bar-dark"
                                                                     role="progressbar"
                                                                     t-attf-style="width: {{skill.score}}%"
                                                                     aria-valuenow="25" aria-valuemin="0"
                                                                     aria-valuemax="100"/>
                                                            </div>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </section>
                                        <section class="resume-section education-section mb-5">
                                            <h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">
                                                Work Experience
                                            </h2>
                                            <div class="resume-section-content">
                                                <ul class="list-unstyled">
                                                    <li class="mb-2" t-foreach="employee_id.experience_ids"
                                                        t-as="experience">
                                                        <div class="resume-degree font-weight-bold">
                                                            <span t-field="experience.name"/>
                                                        </div>
                                                        <div class="resume-degree-org">
                                                            <span t-field="experience.description"/>
                                                        </div>
                                                        <div class="resume-degree-time">
                                                            <span t-field="experience.year"/>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </section>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </article>

                    <footer class="footer text-center pt-2 pb-5">
                        <small class="copyright">Arman Nur Hidayat
                            <i class="fas fa-heart"/>
                            <a href="https://vitraining.com" target="_blank">Vitraining.com</a>
                        </small>
                    </footer>

                </body>
            </html>
        </template>

    </data>
</odoo>